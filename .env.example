# Neon Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/newsletter_ai?sslmode=require

# Google Gemini API (primary LLM provider)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API (fallback and for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Portia AI (optional)
PORTIA_API_KEY=your_portia_api_key_here

# Upstash Redis (for caching and sessions)
UPSTASH_REDIS_URL=rediss://xxx:xxx@xxx.upstash.io:6380
UPSTASH_REDIS_TOKEN=your_upstash_redis_token

# Upstash Vector (for RAG embeddings)
UPSTASH_VECTOR_URL=https://xxx.upstash.io
UPSTASH_VECTOR_TOKEN=your_upstash_vector_token

# Email Service
RESEND_API_KEY=your_resend_api_key_here

# Search API
TAVILY_API_KEY=your_tavily_api_key_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8501